pipeline {
    agent {
        docker {
            image 'docker:24.0.5-dind'  // Use the official Docker-in-Docker image
            args '-v /var/run/docker.sock:/var/run/docker.sock'  // Mount Docker socket
        }
    }

    environment {
        DOCKERHUB_CREDENTIALS = credentials('dockerhub-credentials')  // Jenkins credential ID
    }

    stages {
        stage('Clone Repo') {
            steps {
                git branch: 'main', url: 'https://github.com/NaveenBalagouni/ssd-pratice.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    dockerImage = docker.build("naveenbalagouni/naveen-app:latest", "Docker-app")
                }
            }
        }

        stage('Login to DockerHub & Push') {
            steps {
                script {
                    docker.withRegistry('https://index.docker.io/v1/', DOCKERHUB_CREDENTIALS) {
                        dockerImage.push('latest')  // Push the image to DockerHub
                    }
                }
            }
        }
    }
}
