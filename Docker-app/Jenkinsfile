pipeline {
  agent {
    kubernetes {
      yaml """
apiVersion: v1
kind: Pod
spec:
  containers:
  - name: docker
    image: docker:24.0.7-dind
    command:
    - cat
    tty: true
    securityContext:
      privileged: true
    volumeMounts:
    - name: docker-sock
      mountPath: /var/run/docker.sock
    - name: docker-bin
      mountPath: /usr/bin/docker
  volumes:
  - name: docker-sock
    hostPath:
      path: /var/run/docker.sock
  - name: docker-bin
    hostPath:
      path: /usr/bin/docker
"""
    }
  }
  stages {
    stage('Build Docker Image') {
      steps {
        container('docker') {
          sh 'apk add git || apt update && apt install -y git'  // install git
          sh 'docker --version'
          sh 'docker build -t myapp:latest .'
        }
      }
    }
  }
}
