pipeline {
    agent {
        docker {
            image 'your-custom-docker-image' // Use the custom image built from the Dockerfile above
            args '-v /var/run/docker.sock:/var/run/docker.sock'
        }
    }

    environment {
        DOCKERHUB_CREDENTIALS = credentials('dockerhub-credentials')  // Jenkins credential ID
        DOCKER_IMAGE = 'naveenbalagouni/naveen-app'  // Docker Hub repository name
    }

    stages {
        stage('Clone Repo') {
            steps {
                git branch: 'main', url: 'https://github.com/NaveenBalagouni/ssd-pratice.git'
            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    dockerImage = docker.build("${DOCKER_IMAGE}:latest")
                    sh 'docker build -t yourusername/yourimage:latest 
                }
            }
        }

        stage('Login to DockerHub & Push') {
            steps {
                script {
                    docker.withRegistry('https://index.docker.io/v1/', DOCKERHUB_CREDENTIALS)
                    sh 'docker login -u $DOCKER_USERNAME -p $DOCKER_PASSWORD'
                    sh 'docker push yourusername/yourimage:latest' {
                    dockerImage.push('latest')
                    }
                }
            }
        }
    }
}
