pipeline {
    agent any
    environment {
        DOCKER_HOME = '/usr/bin/docker' // Path to Docker executable on host machine
        PATH = "/usr/local/bin:/usr/bin:$DOCKER_HOME" // Ensure Docker is in the PATH
    }
    stages {
        stage('Check Docker') {
            steps {
                sh 'which docker'  // To check the Docker path
                sh 'docker --version'
                sh 'docker ps' // Run Docker command
            }
        }
    }
}
