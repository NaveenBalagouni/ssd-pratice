# jenkins-build-pod.yaml
apiVersion: v1
kind: Pod
metadata:
  name: jenkins-docker-build
spec:
  containers:
  - name: docker
    image: docker:24.0.7-dind
    command: ["cat"]
    tty: true
    securityContext:
      privileged: true
    volumeMounts:
    - name: docker-sock
      mountPath: /var/run/docker.sock
  volumes:
  - name: docker-sock
    hostPath:
      path: /var/run/docker.sock
